import golosinas.*

describe "test de chupetin" {

	test "peso inicial" {
		assert.equals(7,chupetin.peso())
	}
	
	test "precio" {
		assert.equals(2, chupetin.precio())
	}
	
	test "mordiscos" {
		bombon.mordisco()
		assert.equals(6.3, chupetin.peso()>=2)
		bombon.mordisco()
		assert.equals(5.67, chupetin.peso()>=2)
	}
	
	test "gusto" {
		assert.equals("naranja", chupetin.gusto())
	}
	
	test "libre de gluten" {
		assert.that(chupetin.libreGluten())	
	}
	
}